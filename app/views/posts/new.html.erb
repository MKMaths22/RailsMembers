<%= render 'sign_up_in_or_out' %>

<% if @post.errors.any? %>
  <p>Post had errors</p>
<% end %>

<%= form_with model: @post do |f| %>
  <%= f.label :title, "Title Of Post" %> <br>
  <%= f.text_field :title %> <br>
  <%= f.label :body, "Body Of Post" %> <br>
  <%= f.text_area :body, rows: 15 %> <br>
  <%= f.submit %> <br>
<% end %>